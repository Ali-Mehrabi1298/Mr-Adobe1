
@model Product



<div class="col-md-4">
    <a asp-action="Detail"
       asp-controller="Home"
       asp-route-id="@Model.ProductId" data-id="1">
        <div class="post-content">
            <figure>
                <img src="/img/@(Model.Title).jpg">
                <figcaption class="hover-fig">
                    <i class="fa fa-plus"></i>
                </figcaption>
                <figcaption class="date-fig">
                    @*<span>98/06/08</span>*@
                    <i class="fa fa-date"></i>
                </figcaption>
            </figure>
            <hr />


            <h5 style="padding-right: 10px;padding-left: 160px;"> دوره @Model.Title</h5>
        </div>

    </a>
   

    <a class="btn btn-success my-cart-btn hvr-sweep-to-left"
       style="padding-right: 10px;padding-left: 170px;"
       asp-action="Detail"
       asp-controller="Home"
       asp-route-id="@Model.ProductId">

        جزِییات دوره
    </a>

</div>


    


