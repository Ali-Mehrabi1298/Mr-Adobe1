<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Filess</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
          نام فایل
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filess.Name)
        </dd>
        <dt class="col-sm-2">
