@model MohamadShop.Pages.Admin.sliderrr.EditModel

@{
    ViewData["Title"] = "Edit";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Slider.Id" />
            <div class="form-group">
                <label asp-for="Slider.Name" class="control-label"></label>
                <input asp-for="Slider.Name" class="form-control" />
                <span asp-validation-for="Slider.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Slider.Description" class="control-label"></label>
                <input asp-for="Slider.Description" class="form-control" />
                <span asp-validation-for="Slider.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Slider.ProductId" class="control-label"></label>
                <input asp-for="Slider.ProductId" class="form-control" />
                <span asp-validation-for="Slider.ProductId" class="text-danger"></span>
            </div>

            <div> هشدار:عکس حتما فرمتjpgباشد</div>
            <div><label @*asp-for="Productse.Picture"*@> عکس</label></div>
            <div>
                <input asp-for="Productse.Picture" />
                <span asp-validation-for="Productse.Picture"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="ثبت" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-dark" asp-page="./Index">بازگشت به صفحه </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
