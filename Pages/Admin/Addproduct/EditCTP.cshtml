@page
@model MohamadShop.Pages.Admin.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>ویرایش</h1>

<hr />
<div class="row">
    <div class="col-md-2"></div>
        <div class="col-md-4">
            <form method="post">
                <div class="form-group">
                    <label> آیدی محصول</label>
                    <select asp-for="CategoryToproduct.ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                    <span asp-validation-for="CategoryToproduct.ProductId" class="text-danger"></span>
                </div>

                <div class="form-group">

                    <label> در کدام دسته قراربگیرد</label>
                    <select asp-for="CategoryToproduct.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                    <span asp-validation-for="CategoryToproduct.CategoryId" class="text-danger"></span>
                </div>
                <div class="alert alert-success">

                    <P>نکته :عدد1 برای دسته جدیدترین ها</P>
                    <P>نکته:عدد2 برای دسته محبوب ترین ها</P>
                    <P>نکته :عدد3 برای دسته دوره های ویژه</P>
                </div>


                <div class="form-group">
                    <input type="submit" value="ذخیره" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./IndexCTP">بازگشت به صفحه</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
